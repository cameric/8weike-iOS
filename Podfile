target 'Weike' do
  # Comment this line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Analytics
  pod 'Mixpanel'

  # UI/UX Components
  pod 'VLRTextField'

  # Networking
  pod 'AFNetworking'

  # Localization
  pod 'Localize-Swift'

  target 'WeikeTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'WeikeUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
